<% if resource.present? and resource.errors.present? %>
  <%= content_tag :div, class: 'resource-errors', data: {resource_id: resource.id} do %>
    <h2>Errors detected:</h2>
    <h2><%= pluralize(resource.errors.count, 'error') %> detected </h2>
    <ul>
      <% resource.errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  <%end %>
<% end %>
