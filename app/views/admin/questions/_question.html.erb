<tr>
  <td><%= @question.title %></td>
  <h2>Answers</h2>
  <% link_to 'New Answer', new_admin_question_answer_path(@question) %>
  <ol>
    <%= render @question.answers %>
  </ol>

  <td><%= link_to 'Edit', edit_admin_question_path(@question) %></td>
  <td><%= link_to "Destroy", admin_question_path(@question),
                  method: :delete,
                  data: { confirm: "Do you want to delete this question?" } %></td>
  <td><%= link_to 'Back', admin_tests_path %></td>
</tr>
